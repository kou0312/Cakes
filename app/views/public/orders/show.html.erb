<h2>注文履歴詳細</h2>
<div>
  <h3>注文情報</h3>
  <table>
  <tr>
    <td>注文日</td>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td>〒<%= @order.postal_code %><br><%= @order.order_address %><br><%= @order.name %></td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= @order.payment_method %></td>
  </tr>
  </table>
</div>
<div>
  <h3>請求情報</h3>
  <table>
    <tr>
      <td>商品合計</td>
      <td>
        <% total = 0 %>
        <% @oror.each do |oror| %>
          <% subtotal = ((oror.item.price*oror.amount)*1.08).to_i %>
          <% total += subtotal %>
        <% end %>
        <%= total %>
      </td>
    </tr>
    <tr>
      <td>配送料</td>
      <td>800</td>
    </tr>
    <tr>
      <td>ご請求額</td>
      <td><%= @order.total_payment %></td>
    </tr>
  </table>
</div>
<div>
  <h3>注文内容</h3>
  <table>
    <tr>
      <td>商品</td>
      <td>単価(税込)</td>
      <td>個数</td>
      <td>小計</td>
      <td colspan="3"></td>
    </tr>
    <% @oror.each do |oror| %>
      <tr>
        <td><%= oror.item.name %></td>
        <td><%= (oror.item.price*1.08).to_i %></td>
        <td><%= oror.amount %></td>
        <td>
          <% subtotal = ((oror.item.price*oror.amount)*1.08).to_i %>
          <%= subtotal %>
        </td>
        <td colspan="3"></td>
      </tr>
    <% end %>
  </table>
</div>