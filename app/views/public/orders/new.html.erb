<%= form_with url: public_orders_confimation_path, method: :get do |f| %>
  <%= f.label :payment_method, "支払方法" %>
  <%= f.select :payment_method,Order.payment_methods.keys.to_a %>

  <%= f.label :address, "お届け先" %>

  <%= f.radio_button :address, 0 %>
  <%= f.label :address, "ご自身の住所" %>
  <%= @customer.postal_code %><%= @customer.address %><%= @customer.last_name %><%= @customer.first_name %>

  <%= f.radio_button :address, 1 %>
  <%= f.label :address, "登録済みの住所から選択" %>
  <%= f.collection_select :address, Address.all, :id, :view_postal_code_and_address_and_name %>

  <%= f.radio_button :address, 2 %>
  <%= f.label :address, "新しいお届け先" %>
  <%= f.text_field :postal_code %>
  <%= f.text_field :address %>
  <%= f.text_field :name %>


  <%= f.submit "確認画面へ進む" %>
<% end %>