<%= form_with model: @order, url: public_orders_new_path, method: :post, local: true  do |f| %>
  <%= f.hidden_field :customer_id, :value => current_customer.id %>
  <%= f.hidden_field :postage, :value => 800 %>

  <% total = 0 %>
  <% @cart_items.each do |cart_item| %>
    <% subtotal = ((cart_item.item.price*cart_item.amount)*1.08).to_i %>
    <% total += subtotal %>
  <% end %>

  <%  total_payment = (total + 800 ).to_i %>
  <%= f.hidden_field :total_payment, :value => total_payment %>

  <%= f.label :payment_method, "支払方法" %><br>
  <%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %>
  <%= f.label :クレジットカード %><br>
  <%= f.radio_button :payment_method, :銀行振込 %>
  <%= f.label :銀行振込 %>
  <br>
  <%= f.label :address, "お届け先" %>

  <br>
  <%= f.radio_button :address_option, "0", checked: "checked" %>
  <%= f.label :address, "ご自身の住所" %>
  <%= @customer.postal_code %><%= @customer.address %><%= @customer.last_name %><%= @customer.first_name %>

  <br>
  <%= f.radio_button :address_option, "1" %>
  <%= f.label :address, "登録済みの住所から選択" %>
  <%= f.collection_select :address, Address.all, :id, :view_postal_code_and_address_and_name, :include_blank => "選択してください" %>

  <br>



  <%= f.submit "確認画面へ進む" %>
<% end %>