<h2>配送先登録/一覧</h2>
<%= form_with model: @address, url: public_create_address_path, method: :post do |f| %>

  <div class="form-group">
    <lable>郵便番号(ハイフンなし)</lable>
    <%= f.text_field :postal_code %>
  </div>
  <div class="form-group">
    <label>住所</label>
    <%= f.text_field :address %>
  </div>
  <div class="form-group">
    <label>宛名</label>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.submit '新規登録' %>
  </div>
<% end %>
<table>
  <tr>
    <td><lable>郵便番号</lable></td>
    <td><lable>住所</lable></td>
    <td><lable>宛名</lable></td>
    <td><lable></lable></td>
  </tr>
  <% @addresses.each do |c| %>
    <tr>
      <td><%= c.postal_code %></td>
      <td><%= c.address %></td>
      <td><%= c.name %></td>
      <td><%= link_to "編集する", public_edit_address_path(c.id) %></td>
      <td><%= link_to "削除する", public_destroy_address_path(c.id) %></td>
    </tr>
  <% end %>
</table>