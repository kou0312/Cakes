<h2>配送先登録/一覧</h2>
<%= form_with model: @address, url: public_create_address_path, method: :post do |f| %>
  <%= f.hidden_field :customer_id, :value => current_customer.id %>
  <div class="form-group">
    <lable>郵便番号(ハイフンなし)</lable>
    <%= f.text_field :postal_code %>
  </div>
  <div class="form-group">
    <label>住所</label>
    <%= f.text_field :address %>
  </div>
  <div class="form-group">
    <label>宛名</label>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.submit '新規登録' %>
  </div>
<% end %>
<table>
  <tr>
    <td class="item-b"><lable>郵便番号</lable></td>
    <td class="item-a"><lable>住所</lable></td>
    <td class="item-b"><lable>宛名</lable></td>
    <td class="item-a"><lable></lable></td>
  </tr>
  <% @addresses.each do |c| %>
    <tr>
      <td class="item-b"><%= c.postal_code %></td>
      <td class="item-a"><%= c.address %></td>
      <td class="item-b"><%= c.name %></td>
      <td class="item-a">
        <%= link_to "編集する", public_edit_address_path(c.id) %>
        <%= link_to "削除する", public_destroy_address_path(c.id) %>
      </td>
    </tr>
  <% end %>
</table>