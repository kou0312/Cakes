<h2>商品一覧</h2><h4>全<%= @count %>件</h4>
  <table>
    <% @items.each do |item| %>
      <tr>

        <th>
          <%= link_to public_item_path(item.id) do %>
            <%= image_tag item.image %>
          <% end %>
        </th>
        <th><%= item.name %></th>
        <th><%= item.price %>円</th>
        <th colspan="3"></th>
      </tr>
    <% end %>
  </table>