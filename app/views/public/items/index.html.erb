<h2>商品一覧</h2>
  <thead>
    <tr>
      <th></th>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <th><%= item.image %></th>
        <th>
         <%= link_to admin_item_path(item.id) do %>
           <%= item.name %>
         <% end %>
        </th>
        <th><%= item.price %></th>
      </tr>
    <% end %>
  </tbody>