<%= form_with model: @customer, url: public_customers_path, method: :patch do |f| %>
  <%= f.hidden_field :id %>
  <div class="form-group">
    <label>氏名</label>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="form-group">
    <label>フリガナ</label>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>
  <div class="form-group">
    <label>郵便番号</label>
    <%= f.text_field :postal_code %>
  </div>
  <div class="form-group">
    <label>住所</label>
    <%= f.text_field :address %>
  </div>
  <div class="form-group">
    <label>電話番号</label>
    <%= f.text_field :telephone_number %>
  </div>
  <div class="form-group">
    <label>メールアドレス</label>
    <%= f.text_field :email %>
  </div>

  <div class="form-group">
    <%= f.submit '編集内容を保存' %>
    <%= link_to "退会する", public_customers_confimation_path %>
  </div>
<% end %>