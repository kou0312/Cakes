<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="field">
    <div class="field-a">
      <div class="n-a">
        <%= f.label :名前 %>
      </div>
      <div class="n-a">
        <%= f.label :フリガナ %>
      </div>
      <div class="n-a">
        <%= f.label :メールアドレス %>
      </div>
      <div class="n-a">
        <%= f.label :郵便番号 %><em>(ハイフンなし)</em>
      </div>
      <div class="n-a">
        <%= f.label :住所 %>
      </div>
      <div class="n-a">
        <%= f.label :電話番号 %>
        <em>(ハイフンなし)</em>
      </div>
      <div class="n-a">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <div class="n-a">
        <%= f.label :password_confirmation %>
        <em>(確認用)</em>
      </div>
    </div>

    <div class="field-b">
      <div class="nn">
        <div class="n-b">
          <em>(姓)</em>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        </div>
        <div class="n-b">
          <em>(名)</em>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>
      </div>
      <div class="nn">
        <div class="n-b">
          <em>(セイ)</em>
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
        </div>
        <div class="n-b">
          <em>(メイ)</em>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
        </div>
      </div>
      <div class="n-b">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="n-b">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>
      <div class="n-b">
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>
      <div class="n-b">
        <%= f.text_field :telephone_number, autofocus: true %>
      </div>
      <div class="n-b">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <div class="n-b">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
　  </div>
  </div>
  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>


<% end %>

<h3>既に登録済みの方</h3>
<%= link_to "こちら", new_customer_session_path %>
<em>からログインしてください。</em>
