<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre, url:'/admin/genres', method: :post do |f| %>
  <label>ジャンル名</label>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>
<thead>
  <tr><th>ジャンル</th></tr>
</thead>
<tbody>
  <% @genres.each do |genre| %>
    <tr>
      <th>
        <%= genre.name %>
        <%= link_to admin_edit_path(genre.id) do %>
          編集する
        <% end %>
      </th>
    </tr>
  <% end %>
</tbody>
