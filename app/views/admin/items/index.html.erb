<h2>商品一覧</h2>
<%= link_to "新規登録",new_admin_item_path %>
<table>
  <thead>
    <tr>
      <th></th>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <th></th>
        <th><%= item.id %></th>
        <th>
         <%= link_to admin_item_path(item.id) do %>
           <%= item.name %>
         <% end %>
        </th>
        <th><%= item.price %></th>
         <th><%= item.genre.name %></th>
         <th colspan="3"></th>
      </tr>
    <% end %>
  </tbody>
</table>