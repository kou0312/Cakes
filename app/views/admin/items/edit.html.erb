<h1>商品編集</h1>

<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>

  <h4>商品画像</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <h4>商品名</h4>
  <%= f.text_field :name %>

  <h4>商品説明</h4>
  <%= f.text_area :introduction %>

  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>

  <h4>税抜価格</h4>
  <%= f.text_field :price %>
  <h4>円</h4>

  <%= f.submit '変更を保存' %>

<% end %>