

<%= form_with model: @customer, url: admin_update_customer_path, method: :patch do |f| %>

  <table>
    <tr>
      <td><h4>会員ID</h4></td>
      <td><%= f.text_field :id %></td>
    </tr>
    <tr>
      <td><h4>氏名</h4></td>
      <td><%= f.text_field :last_name %></td>
      <td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td><h4>フリガナ</h4></td>
      <td><%= f.text_field :last_name_kana %></td>
      <td><%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <td><h4>郵便番号</h4></td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td><h4>住所</h4></td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td><h4>電話番号</h4></td>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <td><h4>メールアドレス</h4></td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td><h4>会員ステータス</h4></td>
      <td><%= f.text_field :is_active %></td>
    </tr>
  </table>
  <%= f.submit '変更を保存' %>


<% end %>