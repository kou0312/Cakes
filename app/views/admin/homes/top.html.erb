<h2>注文履歴一覧</h2>
  <thead>
    <tr>
      <th></th>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |o| %>
      <tr>
        <th><%= o.created_at.strftime('%Y/%m/%d %H:%M') %></th>
        <th><%= o.customer.last_name %><%= o.customer.first_name %></th>

        <% amount = 0 %>
        <% o.order_carts.all.each do |cart| %>
          <% amount = amount + cart.amount %>
        <% end %>

        <th><%= amount %></th>
      </tr>
    <% end %>
  </tbody>
