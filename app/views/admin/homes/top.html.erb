<h2>注文履歴一覧</h2>
  <thead>
    <tr>
      <th></th>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |o| %>
      <tr>
        <th>
          <%= link_to admin_admin_order_path(o.id) do %>
            <%= o.created_at %>
          <% end %>
        </th>
        <th><%= o.customer.last_name %><%= o.customer.first_name %></th>
        <th><%= o.order_detail.amount %></th>
      </tr>
    <% end %>
  </tbody>
